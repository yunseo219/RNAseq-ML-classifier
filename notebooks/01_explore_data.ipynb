# Cell 5: Parse diagnosis
# GSE63061 usually has format like "diagnosis: Alzheimer's Disease"
def extract_diagnosis(meta_df):
    for col in meta_df.columns:
        if 'characteristic' in col.lower():
            # Check if this column has diagnosis info
            sample_val = str(meta_df[col].iloc[0])
            if 'diagnosis:' in sample_val.lower() or 'disease:' in sample_val.lower():
                # Extract the part after the colon
                meta_df['diagnosis_clean'] = meta_df[col].apply(
                    lambda x: x.split(':')[-1].strip() if ':' in str(x) else x
                )
                return meta_df
    return meta_df

meta = extract_diagnosis(meta)
